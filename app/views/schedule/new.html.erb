<% content_for(:js) do %>
  <%= javascript_include_tag 'bulk', 'data-turbolinks-track': 'reload' %>
<% end %>
<h1><%= "#{t :options_schedule_new}" %></h1>
<h3><%= "#{t :options_schedule_new_desc}" %></h3>

<%= form_with url: schedule_index_path, multipart: true, local: true, method: :post do |form| %>
  <%= form.file_field "bulk_csv", class: 'file-field', accept: '.csv'  %>

  <h2 class="bulk-or">-- <%= "#{t :or}"%> --</h2>

  <div id="drag-drop-csv" class="drag-drop">
    <%= image_tag('files.png', class: 'img') %>
    <p><%= "#{t :bulk_drag_drop_csv}" %></p>
  </div>

  <%= button_tag "#{t :submit}", type: 'submit', id: 'submit-button', disabled: true %>

<% end %>