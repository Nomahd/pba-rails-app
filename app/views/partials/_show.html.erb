<table class="show-table">
  <% locals[:record].attributes.each do |name, value| %>
    <% if name != 'id' and name != 'created_at' and name != 'updated_at' and name != 'genre_list' and name != 'theme_list' and name != 'special_list' %>
      <tr>
        <th><%= locals[:record].class.human_attribute_name(name) %></th>
        <td><%= value %></td>
      </tr>
    <% elsif name == 'genre_list' %>
      <tr>
        <th><%= locals[:record].class.human_attribute_name(name) %></th>
        <td><%= locals[:record].genre_list %></td>
      </tr>
    <% elsif name == 'theme_list' %>
      <tr>
        <th><%= locals[:record].class.human_attribute_name(name) %></th>
        <td><%= locals[:record].theme_list %></td>
      </tr>
    <% elsif name == 'special_list' %>
      <tr>
        <th><%= locals[:record].class.human_attribute_name(name) %></th>
        <td><%= locals[:record].special_list %></td>
      </tr>
    <% end %>
  <% end %>
</table>
