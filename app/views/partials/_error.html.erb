<% if locals[:model].errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(locals[:model].errors.count, "#{t :error}") %><%= t :error_desc %>
    </h2>
    <ul>
      <% locals[:model].errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% else %>
<% end %>